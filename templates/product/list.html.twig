{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<table>
    <tr>
       <th>{{ knp_pagination_sortable(products, 'Id', 'p.id') }}</th>
         <th>{{ knp_pagination_sortable(products, 'Nom', 'p.name') }}</th>*
         
    </tr>
    {% for product in products  %}
        <tr>
            <td>{{ product.id }}</td><td><a href="{{ path('product.html.twig', {id: product.id}) }}">{{ product.name }}</a></td>
        </tr>
    {% else %}
        <tr>
            <td colspan="2">Aucun produit trouv√©</td>
        </tr>
    {% endfor %}
</table>
<div class="navigation">
    {{ knp_pagination_render(products) }}
</div>
{% endblock %}
