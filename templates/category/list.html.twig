{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% for category in categories %}
    <h1>{{ category.name }}</h1>
    <div class="example-wrapper">
        Id : {{ category.id }}<br/>
        Titre : {{ category.name | upper }}
    <a class="btn btn-success" href="{{ path('app_categories_show', {id: category.id}) }}">visualiser</a>
    <a class="btn btn-warning" href="{{ path('app_categories_edit', {id: category.id}) }}">modifier</a>
    <a class="btn btn-danger" href="{{ path('app_categories_delete', {id: category.id}) }}">supprimer</a>
    <a class="btn btn-dark" href="{{ path('app_categories_add', {id: category.id}) }}">Ajouter</a>

    </div>
    {% endfor %}
  
    <ul>
{% for category in categories %}
 
        {% for children in category.children %}
        
            <li>{{ children.name }}<br/>
            Sous enfants :<br/>
            {% for subchildren in children.children %}
                {{ subchildren.name }}<br/>
            {% else %}
                Pas d'enfants
            {% endfor %}
              {% if category.parent %}
        Parent : {{ category.parent.name }}
        Enfant :<br/>
     </li>
    {% endif %}
           
        {% endfor %}
      

    </ul><br/>
  

      {% endfor %}
</div>
<a class="btn btn-primary" href="{{ path('app_categories') }}">Retour Ã  la liste</a>
{% endblock %}

